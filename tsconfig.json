{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"esnext",
			"dom"
		],
		"outDir": "out",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "react",
		"allowJs": true,
		"sourceMap": true,
		"inlineSources": true,
		"types": [
			"node"
		],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
	}
}